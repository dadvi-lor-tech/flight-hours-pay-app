<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="pay-month-grid" title="Payslips" model="com.axelor.apps.flight.db.PayMonth">
    <field name="fromDate" />
    <field name="toDate" />
    <field name="totalSalary" />
  </grid>

  <form name="pay-month-form" title="Payslip" model="com.axelor.apps.flight.db.PayMonth">
    <panel name="datePanel">
      <field name="fromDate" />
      <field name="toDate" />
    </panel>

    <panel name="manualSalaryPanel">
      <field name="baseSalary" />
      <field name="flightSalary" readonly="true" />
    </panel>

    <panel name="computedSalaryPanel" readonly="true">
      <field name="stepNb" />
      <field name="threshold" />

      <field name="scheduledDuration" widget="duration" />
      <field name="actualDuration" widget="duration" />
      <field name="differenceHours" />
      <spacer />

      <field name="overtimeHours" />
      <field name="overtimeValue" />
    </panel>

    <panel name="extraPanel" readonly="true">
      <field name="woffNb" />
      <field name="woffValue" />
      <field name="oobNb" />
      <field name="oobValue" />
      <field name="alNb" />
      <field name="alValue" />
    </panel>

    <panel name="sidePanel" sidebar="true">
      <button name="computeTotal" title="Compute total salary" onClick="save, com.axelor.apps.flight.web.PayMonthController:compute" />
      <field name="totalSalary" readonly="true" />
    </panel>
  </form>

</object-views>