<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <dashboard name="hours.dashboard" title="Hours dashboard">
    <dashlet action="dashlet.cumulated.hours.year" colSpan="12" />
    <dashlet action="dashlet.cumulated.hours.last.period" colSpan="12" />
  </dashboard>

  <action-view name="dashlet.cumulated.hours.year" title="Cumulated hours on year">
    <view type="chart" name="chart.dashboard.opportunities.source.amount.bar" />
  </action-view>

  <action-view name="dashlet.cumulated.hours.last.period" title="Cumulated hours on period">
    <view type="chart" name="cumulated.hours.last.period.charts" />
  </action-view>

</object-views>