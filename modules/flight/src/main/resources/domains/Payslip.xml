<?xml version='1.0' encoding='UTF-8'?>
<domain-models xmlns='http://axelor.com/xml/ns/domain-models' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation='http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd'>

  <module name="flight" package="com.axelor.apps.flight.db" />

  <entity name="Payslip" jsonAttrs="false">

    <integer name="month" title="Month" selection="month.select"/>
    <integer name="year" title="Year" selection="year.select"/>

    <decimal name="baseSalary" title="Base salary" />
    <decimal name="flightSalary" title="Flight Salary" />
    <decimal name="totalSalary" title="Total salary" />

    <integer name="sectorNb" title="Number of sectors" />
    <decimal name="threshold" title="Threshold" />

    <integer name="scheduledDuration" title="Scheduled duration" />
    <integer name="actualDuration" title="Actual duration" />
    <decimal name="differenceHours" title="Difference hours" />

    <decimal name="overtimeHours" title="Overtime hours" />
    <decimal name="overtimeValue" title="Overtime value" />

    <integer name="woffNb" title="Number of WOFF" />
    <decimal name="woffValue" title="WOFF value" />
    <integer name="oobNb" title="Number of OOB" help="OOB: Out Of Base" />
    <decimal name="oobValue" title="OOB value" />
    <integer name="alNb" title="Number of AL" help="AL: Annual Leave" />
    <decimal name="alValue" title="AL value" />

  </entity>

</domain-models>
